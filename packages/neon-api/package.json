    "jest": "^23.1.0",
    "prettier": "^1.13.7",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "peerDependencies": {
    "@cityofzion/neon-core": "^4.0.0-next.1"
