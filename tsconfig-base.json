{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
